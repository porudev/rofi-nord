@import "colors.rasi"

* {
    background-color:       @background;
    text-color:             @foreground;
	font:				 	"Source Code Pro Semibold 12";
}

window {
    width:      			260px;
    padding:    			25px;
    border:					0px;
    border-radius:          0px;
    border-color:           @accent;
    location:               center;
    y-offset:               -20px;
}

entry {
    expand: 				true;
    text-color:				@accent;
}
